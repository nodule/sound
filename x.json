{
  "name": "sound",
  "description": "Sound for ChiÏ‡",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodule/sound.git"
  },
  "dependencies": {
    "alert": "0.x.x"
  },
  "nodes": [
    {
      "name": "alert",
      "ns": "sound",
      "description": "Play a sound alert",
      "phrases": {
        "active": "Playing sound alert {{input.sound}}"
      },
      "ports": {
        "input": {
          "sound": {
            "title": "Sound",
            "type": "string",
            "enum": [
              "bottle",
              "glass",
              "funk",
              "morse",
              "purr",
              "tink",
              "submarine"
            ],
            "default": "bottle"
          },
          "volume": {
            "title": "Volume",
            "type": "number",
            "default": 0.5,
            "format": "range",
            "step": 0.1,
            "minimum": 0,
            "maximum": 1
          }
        },
        "output": {
          "volume": {
            "type": "number",
            "title": "Volume"
          }
        }
      },
      "dependencies": {
        "npm": {
          "alert": "0.x.x"
        }
      },
      "fn": "alert.volume($.volume);\nalert($.sound);\noutput.volume = $.get('volume');\n"
    }
  ]
}